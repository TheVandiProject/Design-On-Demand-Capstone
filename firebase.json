{
  "hosting": {
    "public": "DesignOnDemand/designs/",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html/"
      },
      {
        "source": "/templates/public/login_page.html",
        "destination": "/login/"
      },
      {
        "source" : "templates/public/sign_up.html",
        "destination" : "/signup/"
      },
      {
        "source" : "/public/user_home.html/",
        "destination" : "/user_home/"
      },
      {
        "source" : "{% url 'logout' %}",
        "destination" : "/main_page/"
      }
    ]
  }
}
